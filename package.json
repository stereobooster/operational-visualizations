{
  "name": "@operational/visualizations",
  "version": "5.2.0",
  "description": "Contiamo visualization library.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "repository": "git@github.com:contiamo/operational-visualizations.git",
  "author": "Imogen Mason <imogen@contiamo.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "parcel scripts/dev-server/index.html",
    "start": "parcel website/index.html",
    "build": "run-p build:*",
    "build:app": "parcel build website/index.html --public-url .",
    "build:package": "rimraf lib && tsc",
    "deploy": "npm run build && gh-pages -d dist",
    "test": "jest",
    "prepublish": "npm run build:package",
    "prettier": "prettier 'website/**/*.{ts,tsx}' --write",
    "precommit": "npm run prettier && git add ."
  },
  "dependencies": {
    "@types/d3-format": "^1.3.0",
    "d3": "^5.4.0",
    "glamor": "^2.20.40",
    "glamorous": "^4.8.0",
    "lodash": "^4.17.4",
    "moment": "^2.21.0",
    "moment-range": "^4.0.1",
    "react": "^16.2.0",
    "tinycolor2": "^1.4.1"
  },
  "jest": {
    "setupFiles": [
      "../../test-polyfills.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "/__tests__/.*\\.(ts|tsx|js|jsx)$",
    "setupTestFrameworkScriptFile": "<rootDir>/../../node_modules/jest-enzyme/lib/index.js",
    "snapshotSerializers": [
      "<rootDir>/../../node_modules/jest-serializer-enzyme"
    ]
  },
  "devDependencies": {
    "@operational/components": "^8.0.0",
    "@types/core-js": "2.5.0",
    "@types/d3-array": "^1.2.1",
    "@types/d3-ease": "^1.0.7",
    "@types/d3-hierarchy": "^1.1.0",
    "@types/d3-interpolate": "^1.1.6",
    "@types/d3-scale": "^2.0.1",
    "@types/d3-selection": "^1.3.0",
    "@types/d3-shape": "^1.2.1",
    "@types/d3-time-format": "^2.1.0",
    "@types/d3-transition": "^1.1.0",
    "@types/enzyme": "^3.1.5",
    "@types/highlight.js": "^9.12.3",
    "@types/jest": "^23.0.0",
    "@types/lodash": "^4.14.109",
    "@types/marked": "^0.4.1",
    "@types/moment-range": "^3.1.0",
    "@types/node": "10.9.4",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/react-icons": "^2.2.2",
    "@types/tinycolor2": "1.4.1",
    "@types/webpack-env": "^1.13.1",
    "awesome-typescript-loader": "^5.2.0",
    "babel-polyfill": "^6.26.0",
    "emotion": "^9.2.6",
    "emotion-theming": "^9.2.6",
    "enzyme": "3.5.0",
    "enzyme-to-json": "3.3.4",
    "gh-pages": "^1.2.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jest-enzyme": "6.0.4",
    "jest-glamor-react": "4.3.1",
    "jest-serializer-enzyme": "1.0.0",
    "lint-staged": "^7.1.3",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "1.9.7",
    "prettier": "^1.13.7",
    "react-dom": "^16.4.1",
    "react-emotion": "^9.2.6",
    "react-test-renderer": "16.4.2",
    "rimraf": "^2.6.2",
    "ts-jest": "23.1.4",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "5.10.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-plugin-blank-line": "^0.0.8",
    "typescript": "^3.0.1"
  }
}
